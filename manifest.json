{
  "manifest_version": 3,
  "name": "Article Credibility Checker",
  "version": "1.0.0",
  "description": "Analyzes news articles and web pages for credibility using AI",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://api.groq.com/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Check Article Credibility"
  },

  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
